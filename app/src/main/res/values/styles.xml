<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="DefaultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/default_button_selector</item>
    </style>
    <style name="CustomTheme1" parent="android:Theme">
        <item name="android:radioButtonStyle">@style/RadioLikeButton</item>
    </style>
    <style name="RadioLikeButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_like</item>
        <item name="android:background">@drawable/radio_like</item>
    </style>
    <style name="CustomTheme2" parent="android:Theme">
        <item name="android:radioButtonStyle">@style/RadioNeutralButton</item>
    </style>
    <style name="RadioNeutralButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_neutral</item>
        <item name="android:background">@drawable/radio_neutral</item>
    </style>
    <style name="CustomTheme3" parent="android:Theme">
        <item name="android:radioButtonStyle">@style/RadioDislikeButton</item>
    </style>
    <style name="RadioDislikeButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_dislike</item>
        <item name="android:background">@drawable/radio_dislike</item>
    </style>

</resources>
